<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">



    <p:panel  id="criterioConsulta" styleClass="encabezadosDialog">         
        <p:focus context="criterioConsulta"/> 

        <f:facet name="header">
            <h:outputLabel value="#{propiedadesEtiquetaBL.Generar} #{propiedadesEtiquetaBL.DiarioGeneral}  "
                           styleClass="encabezadosDialog"/>
        </f:facet>            
        <h:panelGroup>
            <h:panelGrid id="diarioGeneralGri" columns="2" style="width: 500px;"
                         columnClasses="label, value, validator" styleClass="grid">  

                <p:outputLabel value="#{propiedadesEtiquetaBL.Periodo}" 
                               for="periodo"
                               styleClass="etiquetaRequerida" />
                <p:outputLabel id="periodo"
                               value="#{diarioGeneralBean.periodoActual}" 
                               styleClass="etiqueta" />

                <p:outputLabel value="#{propiedadesEtiquetaBL.FechaInicio} " 
                               for="fechaInicio"
                               styleClass="etiquetaRequerida" />
                <p:calendar id="fechaInicio"
                            pattern="dd/MM/yyyy"
                            value="#{diarioGeneralBean.fechaInicio}"
                            title="#{propiedadesTituloBL.FechaInicio}"
                            showOn="button"
                            locale="es" 
                            mindate="#{diarioGeneralBean.primero}"
                            maxdate="#{diarioGeneralBean.fechaActual}"
                            required="true" 
                            requiredMessage="#{propiedadesEtiquetaBL.FechaFin} : #{propiedadesMensajesBL.CampoRequerido}">                    
                </p:calendar>
                 
                <p:outputLabel value="#{propiedadesEtiquetaBL.FechaFin} " 
                               for="fechaFin"
                               styleClass="etiquetaRequerida" />
                <p:calendar id="fechaFin"
                            pattern="dd/MM/yyyy"
                            value="#{diarioGeneralBean.fechaFin}"
                            title="#{propiedadesTituloBL.Fecha}"
                            showOn="button"
                            locale="es" 
                            mindate="#{diarioGeneralBean.primero}"
                            maxdate="#{diarioGeneralBean.fechaActual}"
                            required="true" 
                            requiredMessage="#{propiedadesEtiquetaBL.FechaFin} : #{propiedadesMensajesBL.CampoRequerido}">                    
                </p:calendar>

            </h:panelGrid>      
        </h:panelGroup>
    </p:panel>

</ui:composition>