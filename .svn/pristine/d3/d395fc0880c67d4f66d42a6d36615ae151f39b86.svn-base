<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition>

        <p:dialog id="ComprobanteViewDlg" 
                  widgetVar="ComprobanteViewDialog" 
                  modal="true" 
                  resizable="false" 
                  appendTo="@(body)" 
                  closeOnEscape="true">

            <f:facet name="header">
                <h:outputLabel value="#{propiedadesEtiquetaBL.Mostrar} #{propiedadesEtiquetaBL.Comprobante}"
                               styleClass="encabezadosDialog"/>
            </f:facet>    

            <h:form id="ComprobanteViewForm">

                <h:panelGroup id="display"  style="font-size: 10px; margin-top: 0px;">
                    <p:panelGrid columns="2" rendered="#{comprobanteController.selected != null}">


                        <h:outputText value="#{propiedadesEtiquetaBL.Codigo}"/>
                        <h:outputText value="#{comprobanteController.selected.codigo}" 
                                      title="#{propiedadesTituloBL.Codigo}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.NumeroComprobante}"/>
                        <h:outputText value="#{comprobanteController.selected.numeroComprobante}" 
                                      title="#{propiedadesTituloBL.NumeroComprobante}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.Periodo}"/>
                        <h:outputText value="#{comprobanteController.selected.codigoPeriodo.codigo}" 
                                      title="#{propiedadesTituloBL.PeriodoContable}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.TipoComprobante}"/>
                        <h:outputText value="#{comprobanteController.selected.codigoTipoComprobante.nombre}" 
                                      />

                        <h:outputText value="#{propiedadesEtiquetaBL.Glosa}"/>
                        <h:outputText value="#{comprobanteController.selected.glosa}" 
                                      title="#{propiedadesTituloBL.Glosa}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.FechaRegistro}"/>
                        <h:outputText value="#{comprobanteController.selected.fechaSistema}">
                            <f:convertDateTime pattern="dd/MM/yyyy HH:mm:ss" />
                        </h:outputText>

                        <h:outputText value="#{propiedadesEtiquetaBL.Estado}"/>
                        <h:outputText value="#{comprobanteController.selected.codigoEstado.nombre}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.FechaEstado}"/>
                        <h:outputText value="#{comprobanteController.selected.fechaEstado}" 
                                      title="#{propiedadesTituloBL.FechaEstado}">
                            <f:convertDateTime pattern="dd/MM/yyyy HH:mm:ss" />
                        </h:outputText>

                        <h:outputText value="#{propiedadesEtiquetaBL.EstadoColocadoPor}"/>
                        <h:outputText value="#{comprobanteController.selected.usuarioEstadoColocadoPor.codigoPersona.nombreCompleto}" 
                                      title="#{propiedadesTituloBL.EstadoColocadoPor}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.Total}"/>
                        <h:outputText value="#{comprobanteController.selected.total}"/>

                    </p:panelGrid>
                </h:panelGroup>

            </h:form>

        </p:dialog>

    </ui:composition>

</html>
