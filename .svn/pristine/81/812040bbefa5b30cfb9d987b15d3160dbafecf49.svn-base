<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="UsuarioIfipAgenciaListForm">

        <p:dataTable id="datalist" 
                     value="#{usuarioIfipAgenciaBean.itemsUsuarioIfipAgencia}" 
                     var="item"
                     selectionMode="single" 
                     selection="#{usuarioIfipAgenciaBean.selected}"
                     rowKey="#{item.usuarioIfipAgenciaPK}"
                     paginator="true"
                     rows="8"
                     emptyMessage="#{propiedadesMensajesBL.NoExistenRegistros}">

            <f:facet name="header">
                <h:outputLabel value="#{propiedadesEtiquetaBL.UsuarioIfipAgencia}"/>
            </f:facet>

            <p:ajax event="rowSelect"   update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>
            <p:ajax event="rowUnselect" update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>

            <p:column sortBy="#{item.ifipAgencia.nombre}" filterBy="#{item.ifipAgencia.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Agencia}"/>
                </f:facet>
                <h:outputText value="#{item.ifipAgencia.nombre}"/>
            </p:column>
            
            <p:column sortBy="#{item.usuario.codigoPersona.nombreCompleto}" filterBy="#{item.usuario.codigoPersona.nombreCompleto}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Usuario}"/>
                </f:facet>
                <h:outputText value="#{item.usuario.codigoPersona.nombreCompleto}"/>
            </p:column>
            
            <p:column sortBy="#{item.usuario.username}" filterBy="#{item.usuario.username}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Username}"/>
                </f:facet>
                <h:outputText value="#{item.usuario.username}"/>
            </p:column>

            <p:column sortBy="#{item.codigoRol.descripcion}" filterBy="#{item.codigoRol.descripcion}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Rol}"/>
                </f:facet>
                <h:outputText value="#{item.codigoRol.descripcion}"/>
            </p:column>

            <p:column sortBy="#{item.asignadoPor.username}" filterBy="#{item.asignadoPor.username}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.AsignadoPor}"/>
                </f:facet>
                <h:outputText value="#{item.asignadoPor.username}"/>
            </p:column>

            <p:column sortBy="#{item.codigoPerfil.nombre}" filterBy="#{item.codigoPerfil.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Perfil}"/>
                </f:facet>
                <h:outputText value="#{item.codigoPerfil.nombre}"/>
            </p:column>

            <p:column sortBy="#{item.fechaAsignacion}" filterBy="#{item.fechaAsignacion}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.FechaAsignacion}"/>
                </f:facet>
                <h:outputText value="#{item.fechaAsignacion}">
                    <f:convertDateTime pattern="MM/dd/yyyy HH:mm:ss" />
                </h:outputText>
            </p:column>       

            <p:column> 
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Eliminado}"/>
                </f:facet>
                <p:selectOneMenu id="eliminado" 
                                 disabled="true"
                                 value="#{item.eliminado}"> 
                    <f:selectItem itemLabel="NO" itemValue="N" />  
                    <f:selectItem itemLabel="SI" itemValue="S" />                      
                </p:selectOneMenu>
            </p:column>    

        </p:dataTable>

    </h:form>

</ui:composition>