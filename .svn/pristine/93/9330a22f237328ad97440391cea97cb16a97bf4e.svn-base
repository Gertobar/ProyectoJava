<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="TalonarioLibretaAhorroCabListForm">

        <p:dataTable id="datalist" 
                     value="#{talonarioLibretaAhorroCabController.itemsTalonarioLibAhoCabIfi}" 
                     var="item"
                     selectionMode="single" 
                     selection="#{talonarioLibretaAhorroCabController.selected}"
                     rowKey="#{item.codigo}"
                     paginator="true"
                     rows="8"
                     >
            <f:facet name="header">
                <h:outputText value="#{propiedadesEtiquetaBL.TalonarioLibreta}"/>                
            </f:facet>
            <p:ajax event="rowSelect"   update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>
            <p:ajax event="rowUnselect" update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>
            
            <p:column sortBy="#{item.codigo}" filterBy="#{item.codigo}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Codigo}"/>
                </f:facet>
                <h:outputText value="#{item.codigo}"/>
            </p:column>
            
            <p:column sortBy="#{item.productoIfip.producto.moneda.nombre}" 
                      filterBy="#{item.productoIfip.producto.moneda.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Moneda}"/>
                </f:facet>
                <h:outputText value="#{item.productoIfip.producto.moneda.nombre}"/>
            </p:column>
            
            <p:column sortBy="#{item.productoIfip.producto.tipoProducto.nombre}" filterBy="#{item.productoIfip.producto.tipoProducto.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Producto}"/>
                </f:facet>
                <h:outputText value="#{item.productoIfip.producto.tipoProducto.nombre}"/>
            </p:column>
            
            <p:column sortBy="#{item.inicioSerie}" filterBy="#{item.inicioSerie}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.InicioSerie}"/>
                </f:facet>
                <h:outputText value="#{item.inicioSerie}"/>
            </p:column>
            
            <p:column sortBy="#{item.finSerie}" filterBy="#{item.finSerie}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.FinSerie}"/>
                </f:facet>
                <h:outputText value="#{item.finSerie}"/>
            </p:column>
            
            <p:column>
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.DigitosLibreta}"/>
                </f:facet>
                <h:outputText value="#{item.digitosLibreta}"/>
            </p:column>

        </p:dataTable>

    </h:form>

</ui:composition>