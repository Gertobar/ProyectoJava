<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="TasaInteresProductoIfipListForm">

        

        <p:dataTable id="datalist" value="#{tasaInteresProductoIfipController.itemsTasaInteresProductoIfip}" var="item"
                         selectionMode="single" selection="#{tasaInteresProductoIfipController.selected}"
                         rowKey="#{item.codigo}"
                         paginator="true"
                         rows="10"
                         rowsPerPageTemplate="10,20,30"
                         >

            <p:ajax event="rowSelect"   update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot "/>
            <p:ajax event="rowUnselect" update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>


                <p:column sortBy="#{item.codigo}" filterBy="#{item.codigo}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.Codigo}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigo}"/>
                </p:column>
                <p:column sortBy="#{item.rangoInicial}" filterBy="#{item.rangoInicial}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.RangoInicial}"/>
                    </f:facet>
                    <h:outputText value="#{item.rangoInicial}"/>
                </p:column>
                <p:column sortBy="#{item.rangoFinal}" filterBy="#{item.rangoFinal}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.RangoFinal}"/>
                    </f:facet>
                    <h:outputText value="#{item.rangoFinal}"/>
                </p:column>
             
                <p:column sortBy="#{item.registradoUsuarioPor.username}" filterBy="#{item.registradoUsuarioPor.username}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.RegistradoPor}"/>
                    </f:facet>
                    <h:outputText value="#{item.registradoUsuarioPor.username}"/>
                </p:column>
                <p:column sortBy="#{item.fechaRegistro}" filterBy="#{item.fechaRegistro}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.FechaRegistro}"/>
                    </f:facet>
                    <h:outputText value="#{item.fechaRegistro}">
                        <f:convertDateTime pattern="MM/dd/yyyy HH:mm:ss" />
                    </h:outputText>
                </p:column>
            
                <p:column sortBy="#{item.tipoProducto.nombre}" filterBy="#{item.tipoProducto.nombre}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.ProductoIfip}"/>
                    </f:facet>
                    <h:outputText value="#{item.tipoProducto.nombre}"/>
                   
                </p:column>
             
                <p:column sortBy="#{item.codigoTasaInteres.codigo}" filterBy="#{item.codigoTasaInteres.codigo}">
                    <f:facet name="header">
                        <h:outputText value="#{propiedadesEtiquetaBL.Tasa}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigoTasaInteres.valor}"/>
                </p:column>
             <p:column >
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Eliminado}"/>
                </f:facet>
                <p:selectOneMenu id="eliminado" 
                                 disabled="true"
                                 value="#{item.eliminado}">    
                    <f:selectItem itemLabel="#{propiedadesEtiquetaBL.No}" itemValue="N" />  
                    <f:selectItem itemLabel="#{propiedadesEtiquetaBL.Si}" itemValue="S" />  

                </p:selectOneMenu>
            </p:column>   
             

            </p:dataTable>

        

    </h:form>

</ui:composition>