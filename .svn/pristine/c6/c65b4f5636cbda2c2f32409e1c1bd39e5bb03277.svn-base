<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <!-- ̣̣̣̣**************************************************************************
      CRITERIO DE CONSULTA                                                      -->
    <h:panelGrid columns="1" >
        <f:facet name="header">
            <h:outputText value="#{propiedadesEtiquetaBL.CriterioDeBusqueda}"/>
            <p:separator/>
        </f:facet>
        <h:panelGrid columns="4">
            <h:outputLabel styleClass="etiquetaRequerida" value="#{propiedadesEtiquetaBL.FechaApertura}"/>                         
            <p:calendar  id="fechaApertura" 
                         value="#{reporteAperturaCierreCajaBean.fechaApertura}"
                         maxdate="#{reporteAperturaCierreCajaBean.fechaActual}"
                         pattern="dd/MM/yyyy" 
                         locale="es"                         
                         required="true" 
                         requiredMessage="#{propiedadesEtiquetaBL.FechaApertura} - #{propiedadesMensajesBL.CampoRequerido}"                         
                         showOn="button"
                         >
                <p:ajax event="dateSelect"
                        listener="#{reporteAperturaCierreCajaBean.obtieneAperturas()}" 
                        update=":ReporteListForm:datalist"/>
                
            </p:calendar>
           
        </h:panelGrid>
        <p:separator/>
        
    </h:panelGrid>
    <!-- FIN DE CRITERIO DE CONSULTA 
     ̣̣̣̣************************************************************************** -->


</ui:composition>