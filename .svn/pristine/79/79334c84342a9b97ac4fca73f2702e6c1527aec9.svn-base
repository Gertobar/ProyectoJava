<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="PersonaNaturalListaFor">


        <p:dataTable id="datalist" 
                     value="#{personaGeneralBean.itemsPersona}" 
                     var="item"
                     selectionMode="single" 
                     selection="#{personaGeneralBean.personaSel}"
                     rowKey="#{item.codigo}"
                     paginator="true"
                     rows="6"
                     emptyMessage="#{propiedadesEtiquetaBL.NoExistenRegistros}"
                     >
            <f:facet name="header">
                <h:outputLabel value="#{propiedadesEtiquetaBL.Persona}"/>
            </f:facet>  

            <p:ajax event="rowSelect"   update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>
            <p:ajax event="rowUnselect" update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>

            <p:column sortBy="#{item.codigo}" style="width:  10px">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Codigo}"/>
                </f:facet>
                <h:outputText value="#{item.codigo}"/>
            </p:column>

            <p:column sortBy="#{item.codigoTipoIdentificacion.nombre}" 
                      filterBy="#{item.codigoTipoIdentificacion.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.TipoIdentificacion}"/>
                </f:facet>
                <h:outputText value="#{item.codigoTipoIdentificacion.nombre}"/>
            </p:column>

            <p:column sortBy="#{item.identificacion}" filterBy="#{item.identificacion}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Identificacion}"/>
                </f:facet>
                <h:outputText value="#{item.identificacion}"/>
            </p:column>

            <p:column sortBy="#{item.nombreCompleto}" filterBy="#{item.nombreCompleto}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.NombreCompleto}"/>
                </f:facet>
                <h:outputText value="#{item.nombreCompleto}"/>
            </p:column>



            <p:column sortBy="#{item.fechaIngreso}" >
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.FechaCreacion}"/>
                </f:facet>
                <p:calendar value="#{item.fechaIngreso}" 
                            readonly="true"
                            pattern="dd/MM/yyyy"                                      
                            locale="es" />
            </p:column>

            <p:column sortBy="#{item.fechaActualizacion}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.FechaActualizacion}"/> 
                </f:facet>
                <p:calendar value="#{item.fechaActualizacion}" 
                            readonly="true"
                            pattern="dd/MM/yyyy HH:mm:ss"                                      
                            locale="es" />
            </p:column>



        </p:dataTable>
    </h:form>

</ui:composition>