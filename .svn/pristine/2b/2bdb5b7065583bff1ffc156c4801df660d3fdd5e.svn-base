<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="TalonarioChequeForm">

        <p:dataTable id="datalist" 
                     value="#{talonarioChequeController.itemsTalonarioCheque}" 
                     var="item"
                     selectionMode="single" 
                     selection="#{talonarioChequeController.talonarioCheque}"
                     rowKey="#{item.talonarioChequePK}"
                     paginator="true"
                     rows="8"
                     >
            <f:facet name="header">
                <h:outputText value="#{propiedadesEtiquetaBL.TalonarioCheques}"/>                
            </f:facet>

            <p:ajax event="rowSelect"   update=":barraForm"/>
            <p:ajax event="rowUnselect" update=":barraForm"/>

            <p:column filterMatchMode="containts" sortBy="#{item.ifipCuentaEntidadFinanciera.entidadFinanciera.codigoTipoEntidad.nombre}" 
                      filterBy="#{item.ifipCuentaEntidadFinanciera.entidadFinanciera.codigoTipoEntidad.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.TipoEntidadFinanciera}"/>
                </f:facet>
                <h:outputText value="#{item.ifipCuentaEntidadFinanciera.entidadFinanciera.codigoTipoEntidad.nombre}"/>
            </p:column>

            <p:column filterMatchMode="containts"                      
                      sortBy="#{item.ifipCuentaEntidadFinanciera.entidadFinanciera.nombre}" 
                      filterBy="#{item.ifipCuentaEntidadFinanciera.entidadFinanciera.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.EntidadFinanciera}"/>
                </f:facet>
                <h:outputText value="#{item.ifipCuentaEntidadFinanciera.entidadFinanciera.nombre}"/>
            </p:column>

            <p:column sortBy="#{item.ifipCuentaEntidadFinanciera.numeroCuenta}" 
                      filterBy="#{item.ifipCuentaEntidadFinanciera.numeroCuenta}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.NumeroCuenta}"/>
                </f:facet>
                <h:outputText value="#{item.ifipCuentaEntidadFinanciera.numeroCuenta}"/>
            </p:column>

            <p:column sortBy="#{item.numeroInicio}" filterBy="#{item.numeroInicio}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.InicioSerie}"/>
                </f:facet>
                <h:outputText value="#{item.numeroInicio}"/>
            </p:column>

            <p:column sortBy="#{item.numeroFin}" filterBy="#{item.numeroFin}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.FinSerie}"/>
                </f:facet>
                <h:outputText value="#{item.numeroFin}"/>
            </p:column>

            <p:column> 
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Terminado}"/>
                </f:facet>
                <p:selectOneMenu id="eliminado" 
                                 disabled="true"
                                 value="#{item.terminada}">   
                    <f:selectItem itemLabel="#{propiedadesEtiquetaBL.No}" itemValue="N" />  
                    <f:selectItem itemLabel="#{propiedadesEtiquetaBL.Si}" itemValue="S" />  
                </p:selectOneMenu>
            </p:column>


        </p:dataTable>

    </h:form>

</ui:composition>