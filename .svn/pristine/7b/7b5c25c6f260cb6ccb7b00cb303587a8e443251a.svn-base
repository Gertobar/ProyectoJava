<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="UsuarioGuiaDepositoListForm">

        <p:dataTable id="datalist" 
                     value="#{usuarioGuiaDepositoController.itemsUsuarioGuiaDeposito}" 
                     var="item"
                     selectionMode="single" 
                     selection="#{usuarioGuiaDepositoController.selected}"
                     rowKey="#{item.codigoUsuario}"
                     paginator="true"
                     rows="8"
                     emptyMessage="#{propiedadesMensajesBL.NoExistenRegistros}">

            <f:facet name="header">
                <h:outputLabel value="#{propiedadesEtiquetaBL.UsuarioGuiaDeposito}"/>
            </f:facet>

            <p:ajax event="rowSelect"   update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>
            <p:ajax event="rowUnselect" update=":barraForm:nuevoBot :barraForm:verBot :barraForm:editarBot :barraForm:eliminarBot"/>

            <p:column sortBy="#{item.usuario.codigoPersona.nombreCompleto}" filterBy="#{item.usuario.codigoPersona.nombreCompleto}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Usuario}"/>
                </f:facet>
                <h:outputText value="#{item.usuario.codigoPersona.nombreCompleto}"/>
            </p:column>

            <p:column sortBy="#{item.usuario.username}" filterBy="#{item.usuario.username}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Usuario}"/>
                </f:facet>
                <h:outputText value="#{item.usuario.username}"/>
            </p:column>
            <p:column sortBy="#{item.ifipAgencia.nombre}" filterBy="#{item.ifipAgencia.nombre}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Agencia}"/>
                </f:facet>
                <h:outputText value="#{item.ifipAgencia.nombre}"/>
            </p:column>
            <p:column sortBy="#{item.habilitadoPor.username}" filterBy="#{item.habilitadoPor.username}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.HabilitadoPor}"/>
                </f:facet>
                <h:outputText value="#{item.habilitadoPor.username}"/>
            </p:column>

            <p:column sortBy="#{item.habilitadoPor.codigoPersona.nombreCompleto}" filterBy="#{item.habilitadoPor.codigoPersona.nombreCompleto}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.NombreCompleto}"/>
                </f:facet>
                <h:outputText value="#{item.habilitadoPor.codigoPersona.nombreCompleto}"/>
            </p:column>

            <p:column sortBy="#{item.fechaHabilitacion}" filterBy="#{item.fechaHabilitacion}">
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.FechaHabilitacion}"/>
                </f:facet>
                <h:outputText value="#{item.fechaHabilitacion}">
                    <f:convertDateTime pattern="MM/dd/yyyy HH:mm:ss" />
                </h:outputText>
            </p:column>
            <p:column>
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Eliminado}"/>
                </f:facet>
                <p:selectOneMenu id="eliminado" 
                                 disabled="true"
                                 value="#{item.eliminado}">    
                    <f:selectItem itemLabel="NO" itemValue="N" />  
                    <f:selectItem itemLabel="SI" itemValue="S" />  
                </p:selectOneMenu>
            </p:column>

        </p:dataTable>

    </h:form>

</ui:composition>