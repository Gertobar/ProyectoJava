<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition>
        <p:dialog id="IngresoEgresoEditDlg"
                  widgetVar="IngresoEgresoEditDialog" 
                  modal="true" resizable="false" 
                  appendToBody="true" 
                  closeOnEscape="true">
             <f:facet name="header">
                 <h:outputLabel value="#{propiedadesEtiquetaBL.Edicion} #{propiedadesEtiquetaBL.IngresoEgreso}"
                               styleClass="encabezadosDialog"/>
            </f:facet> 

            <h:form id="IngresoEgresoEditForm">

                <h:panelGroup  id="display" style="font-size: 10px; margin-top: 0px;">
                    <p:panelGrid  columns="2" columnClasses="column" rendered="#{ingresoEgresoController.selected != null}">


                        <h:outputLabel value="#{propiedadesEtiquetaBL.Codigo}" 
                                       for="codigo" />
                        <h:outputText id="codigo" value="#{ingresoEgresoController.selected.codigo}" />

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Nombre}" for="nombre" />
                        <p:inputText id="nombre" value="#{ingresoEgresoController.selected.nombre}"
                                     title="#{propiedadesEtiquetaBL.Nombre}" required="true" 
                                     requiredMessage="#{propiedadesEtiquetaBL.Nombre}" size="30" maxlength="30"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Siglas}" for="siglas" />
                        <p:inputText id="siglas" value="#{ingresoEgresoController.selected.siglas}" 
                                     title="#{propiedadesEtiquetaBL.Siglas}" required="true"
                                     requiredMessage="#{propiedadesEtiquetaBL.Siglas}" size="10" maxlength="10"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Descripcion}" for="descripcion" />
                        <p:inputText id="descripcion" value="#{ingresoEgresoController.selected.descripcion}"
                                     title="#{propiedadesEtiquetaBL.Descripcion}" required="true"
                                     requiredMessage="#{propiedadesEtiquetaBL.Descripcion}" size="100" maxlength="100"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.AfectaCaja}" for="afectaCaja" />
                        <p:inputText id="afectaCaja" value="#{ingresoEgresoController.selected.afectaCaja}" 
                                     title="#{propiedadesEtiquetaBL.AfectaCaja}" required="true" 
                                     requiredMessage="#{propiedadesEtiquetaBL.AfectaCaja}"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Contabiliza}" for="contabiliza" />
                        <p:inputText id="contabiliza" value="#{ingresoEgresoController.selected.contabiliza}" 
                                     title="#{propiedadesEtiquetaBL.Contabiliza}" required="true" 
                                     requiredMessage="#{propiedadesEtiquetaBL.Contabiliza}"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Eliminado}" for="eliminado" />
                        <p:inputText id="eliminado" value="#{ingresoEgresoController.selected.eliminado}" 
                                     title="#{propiedadesEtiquetaBL.Eliminado}" required="true" 
                                     requiredMessage="#{propiedadesEtiquetaBL.Eliminado}"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.EsIngreso}" for="esIngreso" />
                        <p:inputText id="esIngreso" value="#{ingresoEgresoController.selected.esIngreso}"
                                     title="#{propiedadesEtiquetaBL.EsIngreso}" required="true"
                                     requiredMessage="#{propiedadesEtiquetaBL.EsIngreso}"/>
                    </p:panelGrid>
                    <p:commandButton actionListener="#{ingresoEgresoController.save}"
                                     icon="#{propiedadesObjetosBL.IcoGuardar}" 
                                     value="#{propiedadesEtiquetaBL.Guardar}"
                                     update="display,:IngresoEgresoListForm:datalist,:mensaje"
                                     oncomplete="handleSubmit(xhr,status,args,IngresoEgresoEditDialog);"/>
                </h:panelGroup>

            </h:form>

        </p:dialog>

    </ui:composition>

</html>
