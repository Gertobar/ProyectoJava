<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">
    <p:panel  id="informeTecnicoPanel"
              header="#{propiedadesEtiquetaBL.InformeTecnico}"
              style="width: 100% !important; display: block !important;overflow-x: auto !important;-ms-overflow-style: -ms-autohiding-scrollbar !important;">
        <p:focus context="informeTecnicoPanel"/>
        <h:panelGroup id="display"  style="font-size: 10px; margin-top: 0px;">
            <h:panelGrid columns="1">
                <p:panel id="panelInformeTecnicoSocio">
                    <h:panelGrid  columns="2" columnClasses="label, value" styleClass="grid" style="text-align: left">
                        <f:facet name="header">
                            <h:panelGrid columns="2">
                                <h:outputLabel value="#{propiedadesEtiquetaBL.Socio}: "
                                               styleClass="etiqueta"/>
                                <h:outputText value="#{lineaCreditoInformeController.socio.codigoPersona.nombreCompleto}"
                                              style="font-weight: normal"/>
                                <h:outputLabel value="#{propiedadesEtiquetaBL.Numero} #{propiedadesEtiquetaBL.Solicitud}: "
                                               styleClass="etiqueta"/>
                                <h:outputText value="#{lineaCreditoInformeController.lineaCreditoSolicitud.codigo}"
                                              style="font-weight: normal" />
                                <h:outputLabel value="#{propiedadesEtiquetaBL.FechaSolicitud}: "
                                               styleClass="etiqueta"/>
                                <h:outputText value="#{lineaCreditoInformeController.lineaCreditoSolicitud.fechaSolicitud}"
                                              style="font-weight: normal"/>
                                <h:outputLabel value="#{propiedadesEtiquetaBL.Tasa}: "
                                               styleClass="etiqueta"/>
                                <h:outputText value="#{lineaCreditoInformeController.tasa}"
                                              style="font-weight: normal">
                                    <f:convertNumber type="number" groupingUsed="true"  locale="en"  maxFractionDigits="2" minFractionDigits="2" />
                                </h:outputText>
                                <h:outputLabel value="#{propiedadesEtiquetaBL.LineaCredito}: "
                                               styleClass="etiqueta"/>
                                <h:outputText value="#{lineaCreditoInformeController.lineaCreditoSolicitud.lineaCredito.codigoProducto.nombre}"
                                              style="font-weight: normal">
                                </h:outputText>
                                <h:outputLabel value="#{propiedadesEtiquetaBL.Monto} #{propiedadesEtiquetaBL.LineaCredito}: "
                                               styleClass="etiqueta"/>
                                <h:outputText value="#{lineaCreditoInformeController.lineaCreditoSolicitud.montoLineaCredito}"
                                              style="font-weight: normal">
                                    <f:convertNumber type="number" groupingUsed="true"  locale="en"  maxFractionDigits="2" minFractionDigits="2" />
                                </h:outputText>
                                <p:outputLabel value="#{propiedadesEtiquetaBL.Factible}" 
                                               for="factible" styleClass="etiquetaRequerida"/>
                                <p:selectOneMenu id="factible" 
                                                 value="#{lineaCreditoInformeController.lineaCreditoSolicitudInformeTecnico.factible}"
                                                 disabled="#{lineaCreditoInformeController.inactivaFactible}"
                                                 required="true"                                             
                                                 requiredMessage="#{propiedadesEtiquetaBL.Factible} - #{propiedadesMensajesBL.CampoRequerido}">
                                    <f:selectItem itemLabel="#{propiedadesMensajesBL.Seleccione}"/>
                                    <f:selectItem itemLabel="#{propiedadesEtiquetaBL.Si}" itemValue="S" />
                                    <f:selectItem itemLabel="#{propiedadesEtiquetaBL.No}" itemValue="N" />
                                    <p:ajax event="change" listener="#{lineaCreditoInformeController.cambiaFactible}"/>
                                </p:selectOneMenu>
                                <p:outputLabel value="#{propiedadesEtiquetaBL.Recomendacion}"
                                               for="recomendacion"
                                               styleClass="etiquetaRequerida"/>
                                <h:inputTextarea id="recomendacion"
                                                 required="true"
                                                 requiredMessage="#{propiedadesEtiquetaBL.Recomendacion} - #{propiedadesMensajesBL.CampoRequerido}"
                                                 cols="100"
                                                 rows="3"
                                                 disabled="#{lineaCreditoInformeController.inactivaRecomendacion}"
                                                 value="#{lineaCreditoInformeController.lineaCreditoSolicitudInformeTecnico.recomendacion}"
                                                 title="#{propiedadesTituloBL.Detalle}">
                                </h:inputTextarea>
                            </h:panelGrid>
                        </f:facet>
                    </h:panelGrid>
                </p:panel>
            </h:panelGrid>
        </h:panelGroup>
    </p:panel>
</ui:composition>

