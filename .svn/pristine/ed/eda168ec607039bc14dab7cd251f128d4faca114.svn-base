<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <!-- ̣̣̣̣**************************************************************************
      CRITERIO DE CONSULTA                                                      -->
    <h:panelGrid columns="1" >
        <f:facet name="header">
            <h:outputText value="#{propiedadesEtiquetaBL.CriterioDeBusqueda}"/>
            <p:separator/>
        </f:facet>
        <h:panelGrid columns="6">
            <h:outputLabel styleClass="etiquetaRequerida" 
                           value="#{propiedadesEtiquetaBL.FechaInicio}"/>                         
            <p:calendar  id="fechaInicio" 
                         value="#{reporteDpfsBean.fechaInicio}"
                         maxdate="#{reporteDpfsBean.fechaActual}"
                         pattern="dd/MM/yyyy" 
                         locale="es"                         
                         required="true" 
                         requiredMessage="#{propiedadesEtiquetaBL.FechaInicio} - #{propiedadesMensajesBL.CampoRequerido}"                         
                         />

            <h:outputLabel styleClass="etiquetaRequerida" 
                           value="#{propiedadesEtiquetaBL.FechaFin}"/>                         
            <p:calendar  id="fechaFin" 
                         value="#{reporteDpfsBean.fechaFin}"
                         maxdate="#{reporteDpfsBean.fechaActual}"
                         pattern="dd/MM/yyyy" 
                         locale="es"                         
                         required="true" 
                         requiredMessage="#{propiedadesEtiquetaBL.FechaFin} - #{propiedadesMensajesBL.CampoRequerido}"                         
                         />

            <p:outputLabel value="#{propiedadesEtiquetaBL.Estado}"
                           styleClass="etiquetaRequerida"
                           for="estado" />
            <p:selectOneMenu id="estado" 
                             value="#{reporteDpfsBean.estadoContrato}" 
                             disabled="false"
                             requiredMessage="#{propiedadesEtiquetaBL.Boveda} - #{propiedadesMensajesBL.CampoRequerido}"
                             required="false">                
                <f:selectItem  itemValue="V" itemLabel="#{propiedadesEtiquetaBL.Vigente}"/>
                <f:selectItem  itemValue="C" itemLabel="#{propiedadesEtiquetaBL.Cancelado}"/>
                <f:selectItem  itemValue="A" itemLabel="#{propiedadesEtiquetaBL.Anulado}"/>

            </p:selectOneMenu>
        </h:panelGrid>
        <p:separator/>

    </h:panelGrid>
    <!-- FIN DE CRITERIO DE CONSULTA 
     ̣̣̣̣************************************************************************** -->


</ui:composition>