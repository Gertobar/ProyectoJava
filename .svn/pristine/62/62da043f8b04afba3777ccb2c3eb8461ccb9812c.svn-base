<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<!-- LOS COMENTARIOS QUE TIENEN EN SU PARTE SUPERIOR LAS LINEAS ************ Y SEGUIDO
     SU DESCRIPCION NO DEBEN SER BORRADAS, LOS QUE SE DEBEN ELIMINAR SON LAS EXPLICACIONES
     DE CADA CONTENIDO -->
<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="documentosForm">
        <p:panel id="documentosPan" style="width:  650px; height:450px">
            
                <f:facet name="header">
                    <h:outputText value="#{propiedadesEtiquetaBL.Documentos}"/>
            </f:facet>
            <p:panelGrid columns="2">
                
                        <p:outputLabel value="#{propiedadesEtiquetaBL.Ifip}" for="codigoIfip" />

                      <p:inputText id="codigoIfip" 
                                   value="#{ReporteFragmentoIfipController.ifip.nombre}" 
                                     title="#{propiedadesTituloBL.CodigoIfip}" 
                                     required="true" 
                                     requiredMessage="#{propiedadesEtiquetaBL.CodigoIfip} - #{propiedadesMensajesBL.CampoRequerido}"  
                                     size="10" maxlength="10"
                                     disabled="true"/>
                       
                <h:outputLabel value="#{propiedadesEtiquetaBL.Reporte}" for="reporte">
                </h:outputLabel>
                
                <p:selectOneMenu id="reporte"
                                 value="#{ReporteFragmentoIfipController.reporte.codigo}">
                    <f:selectItem itemLabel="#{propiedadesTituloBL.Seleccione}"/>
                    <f:selectItems  value="#{ReporteController.reportes}"
                                    var="reportes"
                                    itemValue="#{reportes.codigo}"
                                    itemLabel="#{reportes.nombre}"/>
                 
                   <p:ajax event="change"                    
                                    listener="#{ReporteFragmentoIfipController.buscarReporte()}"
                                    update="reporteFragmentoIfip">
                            </p:ajax> 
                     
                     
                </p:selectOneMenu>
                      <h:outputLabel value="#{propiedadesEtiquetaBL.ReporteFragmento}" for="fragmentoReporte">
                </h:outputLabel>
                
                <p:selectOneMenu id="fragmentoReporte"
                                 value="#{ReporteFragmentoIfipController.fragmentoReporte.codigo}">
                     <f:selectItem itemLabel="#{propiedadesTituloBL.Seleccione}"/>
                     <f:selectItems  value="#{FragmentoReporteController.fragmentoReportes}"
                                    var="reportess"
                                    itemValue="#{reportess.codigo}"
                                    itemLabel="#{reportess.nombre}"/>
                                   
                          
                            <p:ajax event="change"                    
                                    listener="#{ReporteFragmentoIfipController.buscarReporte()}"
                                    update="reporteFragmentoIfip">
                            </p:ajax> 
                                   
                </p:selectOneMenu>
             
                      <p:outputLabel value="#{propiedadesEtiquetaBL.ReporteFragmento}" for="reporteFragmentoIfip" />

                      <p:inputTextarea id="reporteFragmentoIfip" rows="10" cols="50"
                                   value="#{ReporteFragmentoIfipController.reporteFragmentoIfip.texto}" 
                                   title="#{propiedadesEtiquetaBL.ReporteFragmento}" 
                                     required="true" 
                                     disabled="false"/>
                        
                        
                   
                      <p:commandButton actionListener="#{ReporteFragmentoIfipController.guardar}"
                                             icon="#{propiedadesObjetosBL.IcoGuardar}" 
                                             value="#{propiedadesEtiquetaBL.Guardar}"
                                           
                                            />
                        
            </p:panelGrid> 
            
            
        </p:panel>
  
    </h:form>  
</ui:composition>
    
        