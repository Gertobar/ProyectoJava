<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition>

        <p:dialog id="TipoFirmaViewDlg" 
                  widgetVar="TipoFirmaViewDialog"
                  modal="true" resizable="false" 
                  appendTo="@(body)" 
                  closeOnEscape="true">

            <f:facet name="header">
                <h:outputLabel value="#{propiedadesEtiquetaBL.Mostrar} #{propiedadesEtiquetaBL.TipoFirma}"
                               styleClass="encabezadosDialog"/>
            </f:facet>

            <h:form id="TipoFirmaViewForm">

                <h:panelGroup id="display" style="font-size: 10px; margin-top: 0px;">
                    <p:panelGrid columns="2" rendered="#{tipoFirmaController.selected != null}">

                        <h:outputText value="#{propiedadesEtiquetaBL.Codigo}"/>
                        <h:outputText value="#{tipoFirmaController.selected.codigo}" 
                                      title="#{propiedadesTituloBL.Codigo}"/>

                        <h:outputText value="#{propiedadesEtiquetaBL.Nombre}"/>
                        <h:outputText value="#{tipoFirmaController.selected.nombre}" 
                                      title="#{propiedadesTituloBL.Nombre}"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.TieneFirmas}" 
                                       for="tieneFirmas"/>
                        <p:selectOneMenu id="tieneFirmas" 
                                         value="#{cargoController.selected.tieneFirmas}" 
                                         disabled="true"> 
                            <f:selectItem itemLabel="#{propiedadesEtiquetaBL.No}" itemValue="N" />  
                            <f:selectItem itemLabel="#{propiedadesEtiquetaBL.Si}" itemValue="S" />                            
                        </p:selectOneMenu>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.QuienFirma}" 
                                       for="quienFirma"/>
                        <p:selectOneMenu id="quienFirma" 
                                         value="#{tipoFirmaController.selected.quienFirma}" 
                                         disabled="true"> 
                            <f:selectItem itemLabel="SOLO SOCIO" itemValue="S" />  
                            <f:selectItem itemLabel="UN SOLO FIRMANTE" itemValue="U" />  
                            <f:selectItem itemLabel="TODOS FIRMAN" itemValue="T" />                            
                        </p:selectOneMenu>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Eliminado}"
                                       for="eliminado"/>
                        <p:selectOneMenu id="eliminado" 
                                         value="#{tipoFirmaController.selected.eliminado}" 
                                         disabled="true"> 
                            <f:selectItem itemLabel="#{propiedadesEtiquetaBL.No}" itemValue="N" />  
                            <f:selectItem itemLabel="#{propiedadesEtiquetaBL.Si}" itemValue="S" />                            
                        </p:selectOneMenu>
                    </p:panelGrid>
                </h:panelGroup>

            </h:form>

        </p:dialog>

    </ui:composition>

</html>
