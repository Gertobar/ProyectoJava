<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition>

        <p:dialog id="TipoRelacionCreateDlg" 
                  widgetVar="TipoRelacionCreateDialog" 
                  modal="true" 
                  resizable="false" 
                  appendTo="@(body)"                 
                  closeOnEscape="true">

            <f:facet name="header">
                <h:outputLabel value="#{propiedadesEtiquetaBL.Crea} #{propiedadesEtiquetaBL.TipoRelacion}"
                               styleClass="encabezadosDialog"/>
            </f:facet>

            <h:form id="TipoRelacionCreateForm">

                <h:panelGroup id="display" style="font-size: 10px; margin-top: 0px;">
                    <p:panelGrid columns="2">

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Nombre}" 
                                       for="nombre" styleClass="etiquetaRequerida"/>
                        <p:inputText id="nombre" value="#{tipoRelacionController.selected.nombre}" 
                                     title="#{propiedadesTituloBL.Nombre}" 
                                     requiredMessage="#{propiedadesEtiquetaBL.Nombre} : #{propiedadesMensajesBL.CampoRequerido}" 
                                     required="true"
                                     size="50" 
                                     maxlength="50"/>

                        <p:outputLabel value="#{propiedadesEtiquetaBL.Eliminado}" for="eliminado"  styleClass="etiquetaRequerida" />
                        <p:selectOneMenu id="eliminado" 
                                         value="#{tipoRelacionController.selected.eliminado}"
                                         required="true" 
                                         requiredMessage="#{propiedadesEtiquetaBL.Eliminado} : #{propiedadesMensajesBL.CampoRequerido}">                          
                            <f:selectItem itemLabel="#{propiedadesEtiquetaBL.No}" itemValue="N" />  
                            <f:selectItem itemLabel="#{propiedadesEtiquetaBL.Si}" itemValue="S" />    

                        </p:selectOneMenu>

                        <f:facet name="footer">
                            <p:commandButton actionListener="#{tipoRelacionController.saveNew}" 
                                             icon="#{propiedadesObjetosBL.IcoGuardar}"
                                              value="#{propiedadesEtiquetaBL.Guardar}" 
                                             update="display,:TipoRelacionListForm:datalist,:mensaje" 
                                             oncomplete="handleSubmit(xhr,status,args,TipoRelacionCreateDialog);"/>                  
                        </f:facet>
                    </p:panelGrid>
                </h:panelGroup>

            </h:form>

        </p:dialog>

    </ui:composition>

</html>
