<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="PeriodoEfectivizacionChequeListForm">

        <p:panel header="#{myBundle.ListPeriodoEfectivizacionChequeTitle}">

            <p:dataTable id="datalist" value="#{periodoEfectivizacionChequeController.items}" var="item"
                         selectionMode="single" selection="#{periodoEfectivizacionChequeController.selected}"
                         rowKey="#{item.codigo}"
                         paginator="true"
                         rows="10"
                         rowsPerPageTemplate="10,20,30"
                         >

                <p:ajax event="rowSelect"   update="createButton viewButton editButton deleteButton"/>
                <p:ajax event="rowUnselect" update="createButton viewButton editButton deleteButton"/>

                <p:column sortBy="#{item.codigo}" filterBy="#{item.codigo}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListPeriodoEfectivizacionChequeTitle_codigo}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigo}"/>
                </p:column>
                <p:column sortBy="#{item.codigoPeriodicidad}" filterBy="#{item.codigoPeriodicidad}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListPeriodoEfectivizacionChequeTitle_codigoPeriodicidad}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigoPeriodicidad}"/>
                </p:column>
                <p:column sortBy="#{item.nombre}" filterBy="#{item.nombre}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListPeriodoEfectivizacionChequeTitle_nombre}"/>
                    </f:facet>
                    <h:outputText value="#{item.nombre}"/>
                </p:column>
                <p:column sortBy="#{item.valor}" filterBy="#{item.valor}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListPeriodoEfectivizacionChequeTitle_valor}"/>
                    </f:facet>
                    <h:outputText value="#{item.valor}"/>
                </p:column>
                <p:column sortBy="#{item.eliminado}" filterBy="#{item.eliminado}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListPeriodoEfectivizacionChequeTitle_eliminado}"/>
                    </f:facet>
                    <h:outputText value="#{item.eliminado}"/>
                </p:column>
                <f:facet name="footer">
                    <div class="footer-section">
                        <p:commandButton id="createButton" icon="ui-icon-plus"   value="#{myBundle.Create}" actionListener="#{periodoEfectivizacionChequeController.prepareCreate}" update=":PeriodoEfectivizacionChequeCreateForm" oncomplete="PeriodoEfectivizacionChequeCreateDialog.show()"/>
                        <p:commandButton id="viewButton"   icon="ui-icon-search" value="#{myBundle.View}" update=":PeriodoEfectivizacionChequeViewForm" oncomplete="PeriodoEfectivizacionChequeViewDialog.show()" disabled="#{empty periodoEfectivizacionChequeController.selected}"/>
                        <p:commandButton id="editButton"   icon="ui-icon-pencil" value="#{myBundle.Edit}" update=":PeriodoEfectivizacionChequeEditForm" oncomplete="PeriodoEfectivizacionChequeEditDialog.show()" disabled="#{empty periodoEfectivizacionChequeController.selected}"/>
                        <p:commandButton id="deleteButton" icon="ui-icon-trash"  value="#{myBundle.Delete}" actionListener="#{periodoEfectivizacionChequeController.delete}" update=":growl,datalist" disabled="#{empty periodoEfectivizacionChequeController.selected}"/>
                    </div>
                </f:facet>

            </p:dataTable>

        </p:panel>

    </h:form>

</ui:composition>