<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">
    <p:dialog id="observacionesDialog"
              widgetVar="observacionesDlg"
              modal="true"
              resizable="false"
              appendTo="@(body)"
              closeOnEscape="true"
              closable="true"
              style="height: 530px; width: 1000px"
              onShow="inicializaDialogo()"
              onHide="finalizaDialogo()">
        <f:facet name="header">
            <h:outputLabel value="#{propiedadesEtiquetaBL.Observaciones}"
                           styleClass="encabezadosDialog"/>
            <br/>                
        </f:facet>
        <h:form id="observacionesForm">
            <p:remoteCommand name="inicializaDialogo"
                             actionListener="#{lineaCreditoEnvioComisionController.inicializaDialogo}"
                             update="observacionesForm"/>
            <h:panelGrid columns="1">
                <p:inputTextarea id="diaEstadoCuenta"
                                 readonly="false"
                                 disabled="false"
                                 value="#{lineaCreditoEnvioComisionController.observaciones}"
                                 maxlength="100"
                                 style="width: 100% !important"
                                 cols="35"
                                 rows="3"/>
            </h:panelGrid>
            <p:remoteCommand name="finalizaDialogo"
                             actionListener="#{lineaCreditoEnvioComisionController.finalizaDialogo}"
                             update=":enviaComisionForm:datalist,observacionesForm,:barraForm:enviarComisionBot"/>
        </h:form>
    </p:dialog>
</ui:composition>