<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:p="http://primefaces.org/ui">

    <h:form id="IfipCuentaEntidadFinancieraListForm">

        <p:panel header="#{myBundle.ListIfipCuentaEntidadFinancieraTitle}">

            <p:dataTable id="datalist" value="#{ifipCuentaEntidadFinancieraController.items}" var="item"
                         selectionMode="single" selection="#{ifipCuentaEntidadFinancieraController.selected}"
                         rowKey="#{item.codigo}"
                         paginator="true"
                         rows="10"
                         rowsPerPageTemplate="10,20,30"
                         >

                <p:ajax event="rowSelect"   update="createButton viewButton editButton deleteButton"/>
                <p:ajax event="rowUnselect" update="createButton viewButton editButton deleteButton"/>

                <p:column sortBy="#{item.codigo}" filterBy="#{item.codigo}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_codigo}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigo}"/>
                </p:column>
                <p:column sortBy="#{item.codigoEntidadFinanciera}" filterBy="#{item.codigoEntidadFinanciera}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_codigoEntidadFinanciera}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigoEntidadFinanciera}"/>
                </p:column>
                <p:column sortBy="#{item.codigoTipoCuenta}" filterBy="#{item.codigoTipoCuenta}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_codigoTipoCuenta}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigoTipoCuenta}"/>
                </p:column>
                <p:column sortBy="#{item.numeroCuenta}" filterBy="#{item.numeroCuenta}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_numeroCuenta}"/>
                    </f:facet>
                    <h:outputText value="#{item.numeroCuenta}"/>
                </p:column>
                <p:column sortBy="#{item.observaciones}" filterBy="#{item.observaciones}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_observaciones}"/>
                    </f:facet>
                    <h:outputText value="#{item.observaciones}"/>
                </p:column>
                <p:column sortBy="#{item.eliminado}" filterBy="#{item.eliminado}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_eliminado}"/>
                    </f:facet>
                    <h:outputText value="#{item.eliminado}"/>
                </p:column>
                <p:column sortBy="#{item.codigoIfip.codigo}" filterBy="#{item.codigoIfip.codigo}">
                    <f:facet name="header">
                        <h:outputText value="#{myBundle.ListIfipCuentaEntidadFinancieraTitle_codigoIfip}"/>
                    </f:facet>
                    <h:outputText value="#{item.codigoIfip.codigo}"/>
                </p:column>
                <f:facet name="footer">
                    <div class="footer-section">
                        <p:commandButton id="createButton" icon="ui-icon-plus"   value="#{myBundle.Create}" actionListener="#{ifipCuentaEntidadFinancieraController.prepareCreate}" update=":IfipCuentaEntidadFinancieraCreateForm" oncomplete="IfipCuentaEntidadFinancieraCreateDialog.show()"/>
                        <p:commandButton id="viewButton"   icon="ui-icon-search" value="#{myBundle.View}" update=":IfipCuentaEntidadFinancieraViewForm" oncomplete="IfipCuentaEntidadFinancieraViewDialog.show()" disabled="#{empty ifipCuentaEntidadFinancieraController.selected}"/>
                        <p:commandButton id="editButton"   icon="ui-icon-pencil" value="#{myBundle.Edit}" update=":IfipCuentaEntidadFinancieraEditForm" oncomplete="IfipCuentaEntidadFinancieraEditDialog.show()" disabled="#{empty ifipCuentaEntidadFinancieraController.selected}"/>
                        <p:commandButton id="deleteButton" icon="ui-icon-trash"  value="#{myBundle.Delete}" actionListener="#{ifipCuentaEntidadFinancieraController.delete}" update=":growl,datalist" disabled="#{empty ifipCuentaEntidadFinancieraController.selected}"/>
                    </div>
                </f:facet>

            </p:dataTable>

        </p:panel>

    </h:form>

</ui:composition>